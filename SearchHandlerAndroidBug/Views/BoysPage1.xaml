<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SearchHandlerAndroidBug.Views.BoysPage1"
             xmlns:handler="clr-namespace:SearchHandlerAndroidBug.Handlers"
             Title="Boys Page"
             BackgroundColor="White">
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" 
                                        Value="#4a8acc" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>


        
        <DataTemplate x:Key="BoyTemplate">
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.RowSpan="2"
                    Margin="4"
                    Aspect="AspectFit"
                    HeightRequest="40"
                    Source="boyicon.png"
                    WidthRequest="40" />
                <Label
                    Grid.Column="1"
                    Margin="0"
                    FontAttributes="None"
                    FontSize="Medium"
                    LineBreakMode="NoWrap"
                    VerticalOptions="Center"
                    Text="{Binding Name}"
                    />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="BoySearchTemplate">
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.RowSpan="2"
                    Margin="4"
                    Aspect="AspectFit"
                    HeightRequest="20"
                    Source="boyicon.png"
                    WidthRequest="20" />
                <Label
                     Grid.Column="1"
                    Margin="0"
                    FontAttributes="None"
                    FontSize="Small"
                    LineBreakMode="NoWrap"
                    Text="{Binding Name}"
                    VerticalOptions="Center" />
            </Grid>
        </DataTemplate>


    </ContentPage.Resources>


    <Shell.SearchHandler>
        <handler:PersonSearchHandler Placeholder="Enter the boy's name"
                                      ShowsResults="true"
                                      ItemsSource="{Binding Boys}"
                                      ItemTemplate="{StaticResource BoySearchTemplate}" 
                                      TextColor="#000000" BackgroundColor="#c4e1ff"
                                       />
    </Shell.SearchHandler>

    <CollectionView Margin="4" x:Name="BoyCollectionView"
                    ItemsSource="{Binding Boys}"
                    ItemTemplate="{StaticResource BoyTemplate}"
                    SelectionMode="Single"
                    SelectionChanged="OnCollectionViewSelectionChanged" />
</ContentPage>